<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>Elsevier - Harvard (Modified for JAPB)</title>
    <id>http://www.zotero.org/styles/elsevier-harvard-japb</id>
    <link href="http://www.zotero.org/styles/elsevier-harvard" rel="self"/>
    <author>
      <name>Generated by ChatGPT</name>
      <email>example@example.com</email>
    </author>
    <updated>2025-05-17T00:00:00+00:00</updated>
  </info>

  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all" sort-separator=" " delimiter=". " initialize-with=".">
        <name-part name="family" text-case="title"/>
        <name-part name="given" text-case="capitalize-first"/>
      </name>
      <label form="short" prefix=" (" suffix=")"/>
      <substitute>
        <names variable="editor"/>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>

  <macro name="issued">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="title">
    <text variable="title" font-style="italic"/>
  </macro>

  <macro name="container-title">
    <text variable="container-title" font-style="italic"/>
  </macro>

  <macro name="publisher">
    <group delimiter=", ">
      <text variable="publisher"/>
      <text variable="publisher-place"/>
    </group>
  </macro>

  <citation>
    <sort>
      <key variable="issued"/>
      <key variable="author"/>
    </sort>
    <layout delimiter="; " prefix="(" suffix=")">
      <text macro="author"/>
      <text macro="issued" prefix=" " />
    </layout>
  </citation>

  <bibliography>
    <sort>
      <key variable="author"/>
      <key variable="issued"/>
    </sort>
    <layout>
      <text macro="author"/>
      <text macro="issued" prefix=" " suffix=". "/>
      <text macro="title" suffix=". "/>
      <text macro="container-title" suffix=". "/>
      <text variable="volume" prefix="Vol " suffix=". "/>
      <text variable="page" prefix="pp. " suffix=". "/>
      <text macro="publisher" suffix="."/>
    </layout>
  </bibliography>
</style>
